#ifndef GXX_STD_MEMORY_H
#define GXX_STD_MEMORY_H

#include <new>

namespace std {
	template <typename T>
	class allocator {
	public:
		template <typename ... Args>
		void construct(T* ptr, Args&& ... args) {
			new (ptr) T(std::forward<Args>(args) ...);
		}

		void destroy(T* ptr) {
			ptr->~T();
		}

		T* allocate(size_t n) {
			return (T*)::operator new(n * sizeof(T));
		}
	};
}

#endif